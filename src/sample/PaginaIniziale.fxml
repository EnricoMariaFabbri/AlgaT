<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.PaginaIniziale"
            prefHeight="400.0" prefWidth="600.0">

    <TextField fx:id="numberLesson" prefHeight="40" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <Button fx:id="goToLesson" text="Vai alla lezione"
            prefWidth="150" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="2"
            onAction="#goToLesson">
    </Button>
</GridPane>
