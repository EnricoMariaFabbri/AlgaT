<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="sample.Lezione"
          prefHeight="400.0" prefWidth="600.0">

    <Label fx:id="title" text="" GridPane.columnIndex="0"
           GridPane.rowIndex="0">
        <font>
            <Font name="Arial" size="24" ></Font>
        </font>
    </Label>
    <GridPane xmlns="http://javafx.com/javafx"
              xmlns:fx="http://javafx.com/fxml"
              fx:id="currentSlide"
              GridPane.columnIndex="0"
              GridPane.rowIndex="1"
              prefHeight="400.0" prefWidth="600.0">

    </GridPane>
    <Button fx:id="nextSlide" text="Next"
            prefWidth="150" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="1" GridPane.rowIndex="2"
            onAction="#next">
    </Button>
    <Button fx:id="prevSlide" text="Prev"
            prefWidth="150" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="2"
            onAction="#prev">
    </Button>
    <Button fx:id="startPage" text="Torna all'inizio"
            prefWidth="150" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="3"
            onAction="#goToStartPage">
    </Button>
    <Button fx:id="questions" text="Vai alle domande"
            prefWidth="150" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="1" GridPane.rowIndex="3"
            onAction="#goToQuestions">
    </Button>
</GridPane>

